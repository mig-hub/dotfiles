[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
[alias]
  a = add
  b = branch -v
  r = remote -v
  c = commit -m
  ca = commit -am
  ch = checkout
  chb = checkout -b
  nb = checkout -b
  d = diff --word-diff=color --word-diff-regex=.
  dc = diff --cached
  ps = push
  pl = pull
  s = status -sb
  sm = submodule
  ll = log --graph --date=format:'%F %H:%M'
  l = log --graph --pretty=format:'%Cblue%h%Creset %cd %Cblue%cn%Creset %s' --date=format:'%F %H:%M'
  changelog = log --pretty=format:\" * %s\"
  pushall = !git remote | xargs -L1 -I R git push R master
[core]
  excludesfile = ~/.dotfiles/gitignore
  mergeoptions = --no-edit
[init]
  defaultBranch = main

