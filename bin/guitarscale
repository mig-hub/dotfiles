#!/usr/bin/env ruby

scales = {
  major:                  "1-2-34-5-6-7",
  minor:                  "@-@@-@-@@-@-",
  ionian:                 "@-@-@@-@-@-@",
  dorian:                 "@-@@-@-@-@@-",
  phrygian:               "@@-@-@-@@-@-",
  lydian:                 "@-@-@-@@-@-@",
  mixolydian:             "@-@-@@-@-@@-",
  aeolian:                "@-@@-@-@@-@-",
  locrian:                "@@-@-@@-@-@-",
  penta:                  "@--@-@-@--@-",
  pentamajor:             "@-@-@--@-@--",
  pentaminor:             "@--@-@-@--@-",
  pentadorian:            "@-@--@-@--@-",
  blues:                  "@--@-@@@--@-",
  double_harmonic_minor:  "@@--@@-@@--@",
}

defaults = {
  grid: :penta,
  length: 3,
  strings: 4,
  offset: 7, # basically tuning (7th fret means tuned in 5th)
}

o = defaults.merge(
  Hash[
    ARGV.map do |a| 
      k,v = a.split('=')
      if v=='true'
        v = true
      elsif v=='false'
        v = false
      elsif v=~/^\d+$/
        v = v.to_i
      end
      [k.to_sym,v]
    end
  ]
)

grid = (scales[o[:grid].to_sym] || o[:grid]) * o[:length]

top_to_bottom = (0...o[:strings]).inject([]) do |strings,n|
  char_offset = (n * o[:offset]) % 12
  string = grid.slice(char_offset..-1)+grid.slice(0...char_offset)
  strings + [string.gsub(/./, '\0 ')]
end

puts top_to_bottom.reverse.join("\n")

