:root {
  --bg-color: #ffffff;
  --fg-color: #000000;

  --z-page: 1;
  --z-header: 2;

  --ease-in-out-cubic: cubic-bezier(0.645, 0.045, 0.355, 1.000);
  --ease-in-out-quart: cubic-bezier(0.770, 0.000, 0.175, 1.000);
  --ease-in-out-quint: cubic-bezier(0.860, 0.000, 0.070, 1.000);
  --ease-in-out-expo: cubic-bezier(1.000, 0.000, 0.000, 1.000);
  --ease: var(--ease-in-out-quart);

  // IMPORTANT: Use unitless values for all numbers that are meant to be used with vw().
  // The unit will be stripped out when using a direct number, but not with a CSS var.
  // e.g. --ref-width: 1280;

  // IMPORTANT: For using vw() when setting a CSS var, it needs to be wrapped in #{}.
  // e.g. --body-size: #{vw( 16 )};

  --ref-width: 1280;
  // Use this to convert px to vw: calc( desired-px * var(--px) ) or vw( desired-px )
  --px: calc( 100vw / var( --ref-width ) );
  --body-size: #{ vw( 16 ) };
  --page-margin: #{ vw( 16 ) };
  --gutter: #{ vw( 16 ) };
  @include tablet {
    --ref-width: 768;
  }
  @include mobile {
    --ref-width: 375;
  }
  @include desktop {
    --ref-width: 1600;
  }
}

html {
  scroll-behavior: smooth;
  scroll-margin-top: var( --header-height, 0px );
}

body {
  margin: 0;
  padding: 0;
  @extend %font-body;
  color: var( --fg-color );
  background-color: var( --bg-color );
  &.noscroll {
    overflow: hidden;
  }
}

// Used for javascript breakpoint detection
// window.getComputedStyle(document.body, ':before').content.replace(/\"/g, '');
body::before {
  content: "laptop";
  display: none;
  visibility: hidden;
  @include mobile {
    content: "mobile";
  }
  @include tablet {
    content: "tablet";
  }
  @include desktop {
    content: "desktop";
  }
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
  font-weight: normal;
}

button, input, select, textarea {
  -webkit-appearance: none;
  appearance: none;
  margin: 0;
  padding: 0;
  border: 0;
  outline: 0;
  color: inherit;
  background-color: transparent;
  font-size: inherit;
  font-family: inherit;
}

button {
  cursor: pointer;
}

figure {
  margin: 0;
  padding: 0;
}

p:first-child {
  margin-top: 0;
}
p:last-child {
  margin-bottom: 0;
}

