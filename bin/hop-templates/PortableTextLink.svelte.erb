<script>

  let {
    portableText,
    children,
  } = $props();

  let value = $derived(portableText?.value);
  let href = $derived(value?.href);
  let target = $derived(value?.targetBlank ? '_blank' : undefined);

</script>

{#if href }
  <a {href} {target} >
    {@render children?.() }
  </a>
{:else}
  {@render children?.() }
{/if}

